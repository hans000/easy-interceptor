{
  "manifest_version": 2,
  "name": "Easy Interceptor",
  "version": "1.10.3",
  "description": "Easy Interceptor is a chrome extension that enables a developer to modify responseText that XMLHttpRequest sent",
  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_security_policy" : "script-src 'self' 'unsafe-eval'; script-src-elem 'self' data: blob: https://unpkg.com; worker-src 'self' data: blob:; object-src 'self'",
  "browser_action": {
    "default_title": "Easy Interceptor by hans000",
    "default_popup": "index.html",
    "default_icon": "images/48-gray.png"
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_start",
      "all_frames": true,
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    "injected.js",
    "index.html"
  ]
}